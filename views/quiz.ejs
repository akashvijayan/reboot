<body>
	<div class="main-wrapper-first">
		<div class="hero-area genric-banner relative">
			<header>
				<div class="container">
					<div class="header-wrap">
						<div class="header-top d-flex justify-content-between align-items-center">
							<div class="logo">
								<a href="/"><img src="img/logo.png" alt=""></a>
							</div>
							<div class="main-menubar d-flex align-items-center">
								<nav class="hide">
									<a href="/">Home</a>
									<a href="/videogallery">Videos</a>
									<% if(!userData) { %>
									<a href="/login">Login</a>
									<% } else {%>
									<a href="/profile">Profile</a>
									<a href="/logout">Logout</a>
									<% } %>
								</nav>
								<div class="menu-bar"><span class="lnr lnr-menu"></span></div>
							</div>
						</div>
					</div>
				</div>
			</header>
			<div>
				<div class="overlay overlay-bg"></div>
				<div class="container">
					<div class="row height align-items-center justify-content-center">
						<div class="col-lg-7">
							<div class="banner-content text-center">
								<h2>Quiz</h2>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="main-wrapper">



		<!-- Start newsletter Area -->
		<section id="reg" class="newsletter-area pt-100 pb-100">
			<div class="container">
				<div class="row justify-content-center align-items-center">
					<div class="text-center">

						<div class="container">
							<div class="row">
								<br />
								<div>
									<div class="text-center">
										<h4><%= data.question %></h4>
									</div>
									<!--.panel-heading-->
									<div class="my-1">
										<p><strong>Your Answer</strong></p>
									</div>

									<form class="form-check my-3" action="/quiz" method="POST">
										<% for (var i = 0; i<data.choices.length ;i++) { %>


										<div class="form-check form-check-inline mr-3">
											<input class="form-check-input mx-0" type="radio" id="radio<%=i %>"
												name="choice" value="<%=i %>">
											<label class="form-check-label" for="radio<%=i%>"><span
													id="choice"><%= data.choices[i] %></span></label>
										</div>

										<% } %>
										<input class="btn btn-success mx-auto mt-3 dp-display-block" type="submit">

									</form>

								</div>
							</div>
						</div>
					</div>
				</div>
		</section>
		<!-- Start newsletter Area -->
		<!-- Start footer Area -->
		<footer class="footer-area relative">
			<div class="container">
				<div class="footer-content d-flex flex-column align-items-center">
